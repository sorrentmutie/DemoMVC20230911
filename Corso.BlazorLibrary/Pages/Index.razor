@page "/"


<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>
<Component1>
</Component1>

<EventList Events="@pastEvents"
    OnEventRemoved="RemoveEvent" Title="Eventi passati"></EventList>

@if(selectedEvent != null)
{
    <h3>Selected event: @selectedEvent.Description</h3>
}


@code {
    private EventListElement? selectedEvent;

    private List<EventListElement> pastEvents =
            new List<EventListElement>()
                {
            new EventListElement
            { Id = 1, Description = "Event 34", Date = DateTime.Now.AddDays(-7), Location = "Remota" },
            new EventListElement
            { Id = 2, Description = "Event 35", Date = DateTime.Now.AddDays(-14), Location="Roma" }
                };

    private void RemoveEvent(EventListElement eventListElement)
    {
        selectedEvent = eventListElement;
    }
}